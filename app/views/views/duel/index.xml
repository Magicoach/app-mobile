<Alloy>
	<View id='view'>
		<View id='header'>
			<View id='user'>
				<ImageView class='header_img' id='user_picture'/>
				<Label id='user_name'/>
			</View>
			<View id='vs'/>
			<View id='friend' onClick='onClickFriendHeader' >
				<Label id='friend_name'/>
				<ImageView class='header_img' id='friend_picture'/>
				<View class='arrow'/>
			</View>
		</View>
		<ScrollableView class='pager' id='wrapper'>
			<View id='container'>
				<View class='vertical'>
					<View id='container_paid' onClick='onClickPaidDescription'>
						<ImageView class='logo' left='20' />
						<Label id='paid_description' />
						<ImageView class='logo' right='20' />
					</View>
					<View class='horizontal'>
						<View class='date' id='user_time' onClick='onClickUserParticipationList'>
							<View class='dates'>
								<ImageView class='date_img'/>
								<Label class='datas' id='user_date'/>
								<View class='arrow_green'/>
							</View>
						</View>
						<View class='date' id='friend_time' onClick='onClickFriendParticipationList'>
							<View class='dates'>
								<ImageView class='date_img'/>
								<Label class='datas' id='friend_date'/>
								<View class='arrow_green'/>
							</View>
						</View>
					</View>
				</View>
				<ScrollableView class='pager' id='main'>
					<View>
						<ScrollableView id='content'/>
						<View class='box'>
							<Label class='circle' id='first_dot' onClick='onClickFirstDot' />
							<Label class='circle' id='second_dot' onClick='onClickSecondDot' />
							<Label class='circle' id='third_dot' onClick='onClickThirdDot' />
							<Label class='circle' id='forth_dot' onClick='onClickForthDot' />
							<Label class='circle' id='fifth_dot' onClick='onClickFifthDot' />
						</View>
						<View id='options'/>
					</View>
					<ScrollView class='list' id='user_dates'/>
					<ScrollView class='list' id='friend_dates'/>
				</ScrollableView>
			</View>
			<View class='vertical'>
				<!-- <Label class='title'/> -->
				<Label class='horizontal' id='cancel' onClick='onClickCancel' />	
				<View class='border'/>
				<ScrollView class='list' id='friends'/>
				<!-- <ScrollView class='vertical'>
					<TableView id='friends' onClick='onClickFriendList'/>
			</ScrollView> -->
			</View>
		</ScrollableView>
	</View>
</Alloy>